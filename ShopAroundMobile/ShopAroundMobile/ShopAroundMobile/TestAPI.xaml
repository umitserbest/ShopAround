<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopAroundMobile.TestAPI">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

			<Button Text="Sign In" Clicked="SignInAsync" FontSize="Small" TextColor="White" BackgroundColor="Gold"/>
			<Button Text="Sign Up" Clicked="SignUpAsync" FontSize="Small" TextColor="White" BackgroundColor="Green"/>
			
        </StackLayout>
    </ContentPage.Content>
</ContentPage>