<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopAroundMobile.TabbedPages.Discounts" Title="Discounts" BackgroundColor="White">
    <Grid>
        <ListView ItemsSource="{Binding Discounts}" HasUnevenRows="True" SeparatorColor="Coral"  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding DiscountText}" ImageSource="{Binding DiscountImage}" Detail="{Binding DiscountDetail}" TextColor="Black" DetailColor="Gray"></ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>