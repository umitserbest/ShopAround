<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopAroundMobile.TabbedPages.Explore" Title="Explore" Icon="explore" BackgroundColor="White">
    <ScrollView>
            <Grid x:Name="mainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="120"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--<local1:ImageEntry Grid.Column="0" Grid.Row="0" Placeholder="Search" ImageAlignment="Left" ImageHeight="50" ImageWidth="100" Image="explore"></local1:ImageEntry>-->
                <!--<Entry Grid.Column="0" Grid.Row="0" Placeholder="Search" PlaceholderColor="Gray" Margin="10,0,10,0"></Entry>-->
                <SearchBar Grid.Column="0" Grid.Row="0" Placeholder="Search" CancelButtonColor="Coral" Margin="0,0,20,0"  Focused="SearchBar_Focused"></SearchBar>
                <ScrollView Margin="5,0,5,0" Orientation="Horizontal" Grid.Row="1" Grid.Column="0" >

                    <FlexLayout Margin="0,10,0,-18" >
                        <Frame IsVisible="True" Margin="10,0,0,0" BorderColor="LightGray" CornerRadius="10" WidthRequest="100" HeightRequest="100" BackgroundColor="Transparent">
                        <FlexLayout Direction="Column">
                            <Image Margin="0,-20,0,0" BackgroundColor="Transparent" Source="https://cdn0.iconfinder.com/data/icons/galaxy-open-line-gradient-iii/200/my-places-512.png"></Image>
                            <Label Text="Location" TextDecorations="Underline" TextColor="Black" FontSize="18" FontAttributes="Bold" Margin="20,-10,0,0" HorizontalOptions="Center"></Label>
                        </FlexLayout>
                        </Frame>
                        <Frame IsVisible="True" Margin="10,0,0,0" CornerRadius="10" WidthRequest="150" Padding="0" HeightRequest="100" BackgroundColor="Transparent" BorderColor="LightGray">
                            <FlexLayout Direction="Column">
                            <Image Aspect="AspectFill" BackgroundColor="Transparent" Source="https://img.etimg.com/thumb/msid-62337531,width-643,imgsize-187210,resizemode-4/jean-denim-fashion-thinkstockphotos-540741052.jpg"></Image>
                                <Label Text="Jeans" TextDecorations="Underline" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="50,-50,0,0" HorizontalOptions="Center"></Label>
                            </FlexLayout>
                        </Frame>
                        <Frame Padding="0" IsVisible="True"  Margin="10,0,0,0" CornerRadius="10" WidthRequest="150" HeightRequest="100" BackgroundColor="Transparent" BorderColor="LightGray" >

                            <FlexLayout Direction="Column">
                            <Image Aspect="AspectFill" BackgroundColor="Transparent" Source="https://media.tiffany.com/is/image/Tiffany/1X/20160322_CB_Tiffany_View_All_Browse_Grid_Tile1_3x2Promo_MX_CT60_Watches_3x2_v1.jpg?v=20161026164213"></Image>
                                <Label Text="Watches" TextDecorations="Underline" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="50,-50,0,0" HorizontalOptions="Center"></Label>
                            </FlexLayout>
                        </Frame>
                        <Frame Padding="0" IsVisible="True"  Margin="10,0,0,0" CornerRadius="10"  WidthRequest="150" HeightRequest="100" BackgroundColor="Transparent" BorderColor="LightGray">

                            <FlexLayout Direction="Column">
                            <Image Aspect="AspectFill" BackgroundColor="Transparent" Source="https://www.florsheimshoes.ca/shop/resources/images/index/index6.jpg"></Image>
                                <Label Text="Shoes" TextDecorations="Underline" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="50,-50,0,0" HorizontalOptions="Center"></Label>
                            </FlexLayout>
                        </Frame>
                        <Frame IsVisible="True" Margin="10,0,0,0" CornerRadius="10"  WidthRequest="150" Padding="0" HeightRequest="100" BackgroundColor="Transparent" BorderColor="LightGray">

                            <FlexLayout Direction="Column">
                            <Image Aspect="AspectFill" BackgroundColor="Transparent" Source="http://www.matandmay.co.za/ImageLibrary/landingPages/42bb90cd-a7f1-414d-9d9e-2a0ec5e6daa2-lrg.jpeg"></Image>
                                <Label Text="Bags" TextDecorations="Underline" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="50,-50,0,0" HorizontalOptions="Center"></Label>
                            </FlexLayout>
                        </Frame>
                        <Frame IsVisible="True"  Margin="10,0,0,0" CornerRadius="10"  WidthRequest="150" Padding="0" HeightRequest="100" BackgroundColor="Transparent" BorderColor="LightGray">

                            <FlexLayout Direction="Column">
                            <Image Aspect="AspectFill" BackgroundColor="Transparent" Source="http://www.impex-experts.com/wp-content/uploads/2017/07/t-shirts-720.jpg"></Image>
                                <Label Text="T-shirts" TextDecorations="Underline" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="50,-50,0,0" HorizontalOptions="Center"></Label>
                            </FlexLayout>
                        </Frame>
                    </FlexLayout>

                </ScrollView>

                <Grid x:Name="ProductsGrid" HorizontalOptions="Center" Grid.Row="2" Margin="10,10,10,10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>


                </Grid>

    </Grid>
    </ScrollView>
</ContentPage>