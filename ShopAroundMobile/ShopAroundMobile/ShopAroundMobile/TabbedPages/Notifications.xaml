<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopAroundMobile.TabbedPages.Notifications" Title="Notifications" BackgroundColor="White">
    <Grid>
        <ListView ItemsSource="{Binding Notifications}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding NoticeText}" ImageSource="{Binding NoticeImage}" Detail="{Binding NoticeDate}" TextColor="Black" DetailColor="Gray"></ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>